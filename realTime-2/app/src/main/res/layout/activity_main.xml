<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#212121"
tools:context="com.example.dizda.realtime_2.MainActivity"
android:clickable="false">

<Button
    android:id="@+id/nazovi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nazovi"
    android:textSize="30dp"
    android:background="@drawable/mjenjanje"
    android:textColor="#f8fdf9"
    android:clickable="true"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#00BCD4"
    android:text="Hepek"

    android:id="@+id/labela"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/ipAdress" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ipAdress"
    android:layout_below="@+id/labela"
    android:layout_marginTop="41dp"
    android:background="#E0F7FA"
    android:layout_alignEnd="@+id/nazovi"
    android:layout_alignStart="@+id/nazovi" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Server mod"
    android:id="@+id/serverMod"
    android:layout_below="@+id/ipAdress"
    android:layout_alignStart="@+id/ipAdress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connect"
        android:layout_below="@+id/serverMod"
        android:layout_alignStart="@+id/nazovi" />

</RelativeLayout>
